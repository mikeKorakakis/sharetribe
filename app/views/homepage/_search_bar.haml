.search-form-input.search-form-text-field
  = text_field_tag "q", params[:q], :placeholder => (!@community_customization.search_placeholder.empty? && @community_customization.search_placeholder) || t("homepage.index.what_do_you_need")
  = text_field_tag "lc", params[:lc], :placeholder => t("homepage.index.location")  
.search-form-input
  %button.action-button#search-button{type: 'submit'}
    = icon_tag("search", ["icon-part"])
